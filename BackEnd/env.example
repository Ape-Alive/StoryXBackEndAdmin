# ==================== 服务器配置 ====================
NODE_ENV=development
PORT=3000

# ==================== 数据库配置 (Prisma) ====================
# MySQL 连接字符串格式: mysql://用户名:密码@主机:端口/数据库名
# 示例: mysql://root:password@localhost:3306/storyx_admin
DATABASE_URL="mysql://root:password@localhost:3306/storyx_admin?schema=public"

# ==================== JWT 配置 ====================
# JWT 密钥（生产环境请使用强随机字符串，建议至少32个字符）
# 可以使用以下命令生成随机密钥: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-change-in-production-please-use-strong-random-string
JWT_EXPIRES_IN=24h

# ==================== Redis 配置（可选） ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==================== CORS 配置 ====================
# 前端应用地址，多个地址用逗号分隔
CORS_ORIGIN=http://localhost:3001

# ==================== 日志配置 ====================
LOG_LEVEL=info
LOG_DIR=./logs

# ==================== SMTP 配置（邮箱验证码） ====================
# SMTP 服务器配置（用于发送邮箱验证码）
# 如果使用 Gmail，需要使用应用专用密码
# 如果使用 QQ 邮箱，SMTP_HOST=smtp.qq.com, SMTP_PORT=587
# 如果使用 163 邮箱，SMTP_HOST=smtp.163.com, SMTP_PORT=465, SMTP_SECURE=true
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@example.com

# ==================== API 配置 ====================
API_BASE_URL=http://localhost:3000

# ==================== 订单配置 ====================
# 订单过期时间（分钟）
ORDER_EXPIRE_MINUTES=30

# ==================== 支付配置 ====================
# YunGouOS 支付配置
YUNGOUOS_MCH_ID=your_mch_id
YUNGOUOS_API_KEY=your_api_key
YUNGOUOS_API_BASE_URL=https://api.pay.yungouos.com
YUNGOUOS_NOTIFY_URL=http://localhost:3000/api/payment/callback/yungouos
YUNGOUOS_RETURN_URL=http://localhost:3001/payment/return

# 微信官方支付配置（预留）
# WECHAT_APP_ID=your_app_id
# WECHAT_MCH_ID=your_mch_id
# WECHAT_API_KEY=your_api_key
# WECHAT_NOTIFY_URL=http://localhost:3000/api/payment/callback/wechat_official

# 支付宝官方支付配置（预留）
# ALIPAY_APP_ID=your_app_id
# ALIPAY_PRIVATE_KEY=your_private_key
# ALIPAY_PUBLIC_KEY=your_public_key
# ALIPAY_NOTIFY_URL=http://localhost:3000/api/payment/callback/alipay_official

# Stripe 支付配置（预留）
# STRIPE_SECRET_KEY=your_secret_key
# STRIPE_PUBLISHABLE_KEY=your_publishable_key
# STRIPE_WEBHOOK_SECRET=your_webhook_secret

# ==================== 文件上传配置 ====================
# 上传文件大小限制（MB）
MAX_FILE_SIZE=10

# ==================== 安全配置 ====================
# 是否启用请求限流
ENABLE_RATE_LIMIT=true
# 每分钟最大请求数
RATE_LIMIT_MAX=100

