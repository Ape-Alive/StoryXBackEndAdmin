      "post": {
        "summary": "创建提示词 [管理员/终端用户]",
        "deprecated": false,
        "description": "创建新的提示词。\n权限说明：\n- system, system_user：仅管理员可创建\n- user：仅终端用户可创建（管理员应使用system_user）\n",
        "tags": [
          "提示词库"
        ],
        "parameters": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "title",
                  "content",
                  "categoryId",
                  "type"
                ],
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "提示词标题",
                    "example": "Python代码生成助手"
                  },
                  "content": {
                    "type": "string",
                    "description": "提示词内容",
                    "example": "你是一个专业的Python代码生成助手，请根据用户需求生成高质量的Python代码。"
                  },
                  "description": {
                    "type": "string",
                    "description": "提示词描述",
                    "nullable": true,
                    "example": "用于生成Python代码的提示词模板"
                  },
                  "categoryId": {
                    "type": "string",
                    "description": "分类ID（必填）",
                    "example": "clx111222333"
                  },
                  "type": {
                    "type": "string",
                    "enum": [
                      "system",
                      "system_user",
                      "user"
                    ],
                    "description": "提示词类型：\n- system: 系统提示词（仅管理员CRUD，终端用户可查看）\n- system_user: 系统用户提示词（仅管理员CRUD，终端用户可查看，可关联system）\n- user: 终端用户提示词（管理员和终端用户都能CRUD，可关联system）\n",
                    "example": "user"
                  },
                  "systemId": {
                    "type": "string",
                    "description": "关联的system类型提示词ID（system_user和user类型可选，必须指向type为system的提示词）",
                    "nullable": true,
                    "example": "clx111222333"
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "标签数组",
                    "nullable": true,
                    "example": [
                      "python",
                      "代码生成"
                    ]
                  },
                  "isActive": {
                    "type": "boolean",
                    "default": true,
                    "description": "是否启用"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "创建成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Prompt created successfully"
                    },
                    "data": {
                      "type": "object",
                      "description": "创建的提示词信息",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "title": {
                          "type": "string"
                        },
                        "content": {
                          "type": "string"
                        },
                        "type": {
                          "type": "string"
                        },
                        "categoryId": {
                          "type": "string"
                        },
                        "systemId": {
                          "type": "string",
                          "nullable": true
                        },
                        "userId": {
                          "type": "string",
                          "nullable": true
                        },
                        "version": {
                          "type": "integer"
                        },
                        "isActive": {
                          "type": "boolean"
                        },
                        "category": {
                          "type": "object",
                          "properties": {}
                        },
                        "system": {
                          "type": "object",
                          "properties": {},
                          "nullable": true
                        }
                      }
                    }
                  }
                }
              }
            },
            "headers": {}
          },
          "400": {
            "description": "请求参数错误、分类不存在或systemId指向的提示词不是system类型",
            "headers": {}
          },
          "403": {
            "description": "权限不足（非管理员尝试创建系统类型提示词，或管理员尝试创建user类型）",
            "headers": {}
          },
          "404": {
            "description": "分类不存在或systemId指向的提示词不存在",
            "headers": {}
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
