  "paths": {
    "/api/prompts": {
      "get": {
        "summary": "获取提示词列表 [管理员/终端用户]",
        "deprecated": false,
        "description": "获取提示词列表，支持多条件筛选和分页。\n权限说明：\n- 管理员：可以查看所有类型的提示词\n- 终端用户：可以查看system和system_user类型提示词，以及自己的user类型提示词\n",
        "tags": [
          "提示词库"
        ],
        "parameters": [
          {
            "name": "title",
            "in": "query",
            "description": "标题关键词（模糊搜索）",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "categoryId",
            "in": "query",
            "description": "分类ID筛选",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "type",
            "in": "query",
            "description": "提示词类型筛选",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "system",
                "system_user",
                "user"
              ]
            }
          },
          {
            "name": "userId",
            "in": "query",
            "description": "用户ID筛选（管理员可用）",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "isActive",
            "in": "query",
            "description": "是否启用筛选",
            "required": false,
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "tags",
            "in": "query",
            "description": "标签关键词搜索",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "startDate",
            "in": "query",
            "description": "创建开始时间",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "description": "创建结束时间",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "页码",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1,
              "minimum": 1
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "description": "每页数量",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 20,
              "minimum": 1,
              "maximum": 100
            }
          },
          {
            "name": "order",
            "in": "query",
            "description": "排序顺序",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "asc",
                "desc"
              ],
              "default": "desc"
            }
          },
          {
            "name": "orderBy",
            "in": "query",
            "description": "排序字段",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "createdAt",
                "title"
              ],
              "default": "createdAt"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "获取成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Success"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "description": "提示词ID",
                            "example": "clx123456789"
                          },
                          "title": {
                            "type": "string",
                            "description": "标题",
                            "example": "Python代码生成助手"
                          },
                          "content": {
                            "type": "string",
                            "description": "提示词内容",
                            "example": "你是一个专业的Python代码生成助手..."
                          },
                          "description": {
                            "type": "string",
                            "description": "描述",
                            "nullable": true
                          },
                          "categoryId": {
                            "type": "string",
                            "description": "分类ID"
                          },
                          "category": {
                            "type": "object",
                            "description": "分类信息",
                            "properties": {
                              "id": {
                                "type": "string"
                              },
                              "name": {
                                "type": "string"
                              },
                              "displayName": {
                                "type": "string"
                              }
                            }
                          },
                          "type": {
                            "type": "string",
                            "enum": [
                              "system",
                              "system_user",
                              "user"
                            ],
                            "description": "提示词类型"
                          },
                          "userId": {
                            "type": "string",
                            "description": "用户ID（仅user类型有值）",
                            "nullable": true
                          },
                          "systemId": {
                            "type": "string",
                            "description": "关联的system提示词ID（system_user和user类型使用）",
                            "nullable": true
                          },
                          "system": {
                            "type": "object",
                            "description": "关联的system提示词信息",
                            "properties": {
                              "id": {
                                "type": "string"
                              },
                              "title": {
                                "type": "string"
                              },
                              "type": {
                                "type": "string"
                              }
                            },
                            "nullable": true
                          },
                          "version": {
                            "type": "integer",
                            "description": "当前版本号"
                          },
                          "versionCount": {
                            "type": "integer",
                            "description": "版本总数"
                          },
                          "isActive": {
                            "type": "boolean",
                            "description": "是否启用"
                          },
                          "tags": {
                            "type": "string",
                            "description": "标签（JSON字符串）",
                            "nullable": true
                          },
                          "createdAt": {
                            "type": "string",
                            "format": "date-time",
                            "description": "创建时间"
                          },
                          "updatedAt": {
                            "type": "string",
                            "format": "date-time",
                            "description": "更新时间"
                          }
                        }
                      }
                    },
                    "pagination": {
                      "type": "object",
                      "properties": {
                        "page": {
                          "type": "integer",
                          "example": 1
                        },
                        "pageSize": {
                          "type": "integer",
                          "example": 20
                        },
                        "total": {
                          "type": "integer",
                          "example": 100
                        },
                        "totalPages": {
                          "type": "integer",
                          "example": 5
                        }
                      }
                    }
                  }
                }
              }
            },
            "headers": {}
          },
          "403": {
            "description": "权限不足",
            "headers": {}
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
