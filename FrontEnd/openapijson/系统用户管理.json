      "post": {
        "summary": "创建管理员（仅 super_admin）",
        "deprecated": false,
        "description": "",
        "tags": [
          "系统用户管理"
        ],
        "parameters": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "username",
                  "email",
                  "password",
                  "role"
                ],
                "properties": {
                  "username": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 20,
                    "pattern": "^[a-zA-Z0-9_]+$",
                    "description": "用户名（3-20个字符，只能包含字母、数字和下划线）",
                    "example": "admin001"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "邮箱地址",
                    "example": "admin001@example.com"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 6,
                    "maxLength": 50,
                    "description": "密码（6-50个字符）",
                    "example": "password123"
                  },
                  "role": {
                    "type": "string",
                    "enum": [
                      "platform_admin",
                      "operator",
                      "risk_control",
                      "finance",
                      "read_only"
                    ],
                    "description": "角色（不能是 super_admin）",
                    "example": "platform_admin"
                  },
                  "status": {
                    "type": "string",
                    "enum": [
                      "active",
                      "inactive"
                    ],
                    "default": "active",
                    "description": "状态"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "创建成功",
            "headers": {}
          },
          "400": {
            "description": "请求参数错误",
            "headers": {}
          },
          "403": {
            "description": "权限不足（非 super_admin）",
            "headers": {}
          },
          "409": {
            "description": "用户名或邮箱已存在",
            "headers": {}
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
